<?xml version='1.0' encoding='utf-8'?>
<widget id="name.thomashunter.strategicgol" version="0.7.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Game of Life</name>
    <description>
        Strategic Game of Life: Conway's Game of Life reimagined as a strategic campaign of levels to beat.
    </description>
    <author email="me@thomashunter.name" href="https://thomashunter.name">Thomas Hunter II</author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <access origin="zyu.me" />
    <access origin="zyu.me:1337" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="zyu.me" />
    <allow-navigation href="zyu.me:1337" />
    <allow-navigation href="http://zyu.me/*" />
    <allow-navigation href="http://zyu.me:1337/*" />
    <allow-navigation href="https://cdn.mxpnl.com/*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="true" />
    <icon src="res/icons/app-66.png" width="66" height="66" density="ldpi" />
    <icon src="res/icons/app-76.png" width="76" height="76" density="mdpi" />
    <icon src="res/icons/app-120.png" width="120" height="120" density="hdpi" />
    <icon src="res/icons/app-128.png" width="128" height="128" density="hdpi" />
    <icon src="res/icons/app-152.png" width="152" height="152" density="xhdpi" />
    <platform name="ios">
        <splash src="res/splash/splash-320x480.png" width="320" height="480" />
        <splash src="res/splash/splash-640x960.png" width="640" height="960" />
        <splash src="res/splash/splash-768x1024.png" width="768" height="1024" />
        <splash src="res/splash/splash-1536x2048.png" width="1536" height="2048" />
        <splash src="res/splash/splash-640x1136.png" width="640" height="1136" />
        <splash src="res/splash/splash-750x1334.png" width="750" height="1334" />
        <splash src="res/splash/splash-1242x2208.png" width="1242" height="2208" />
    </platform>
</widget>
